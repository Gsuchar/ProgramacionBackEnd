<div id="productList">  
  <div class="row" style="padding: 0px 0px 0px 5px;">    
    <div class="col-10" style="background-color: #212529; height: 100vh;">
      <h2 class=" my-3" style="color: #fff; text-align: center">PRODUCTOS PARA AGREGAR AL CART</h2>
      <table class="table table-dark">
        <div style="color: rgb(255, 255, 255); ">
          <h3>-- Filtros --</h3>

          {{!-- <label for="category">Categoria:</label>
          <input type="text" id="category" /> --}}
          <label for="limit">Cantidad Productos:</label>
          <select id="limit" onchange="setLimit()">
            <option value="10">Seleccionar</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
          </select>
          <label for="filterType">Filtrar por:</label>
          <select id="filterType" onchange="setFilterType()">
            <option>Seleccionar</option>
            <option value="title">Nombre</option>
            <option value="description">Descripcion</option>            
            <option value="price">Precio</option>
            <option value="code">Codigo</option>
            <option value="stock">Stock</option>
            <option value="category">Categoria</option>            
          </select>
          <label for="attName">  y Buscar: </label>
          <input type="text" id="attName" />
          <label for="sortPrice">Ordenar por:</label>
          <select id="sortPrice" onchange="setSortPrice()">
            <option value="">Seleccionar</option>
            <option value="asc">Menor Precio</option>
            <option value="desc">Mayor Precio</option>
                        
          </select>
        </div>
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Codigo</th>
            <th scope="col">Stock</th>
            <th scope="col">Categoria</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody id="dinamic-product-list">
          {{#each listProducts.docs}}
            <tr>
              <th scope="row">{{this.id}}</th>
              <td>{{this.title}}</td>
              <td>{{this.description}}</td>
              <td>{{this.price}}</td>
              <td>{{this.code}}</td>
              <td>{{this.stock}}</td>
              <td>{{this.category}}</td>
              <td>{{this.thumbnail}}</td>
              <td><input type="submit" value="Agregar"  class="btn btn-success " onclick="addToCart('{{this.id}}')"/>
              </td>  
            </tr>
          {{/each}}
                <nav aria-label="Page navigation example">
        <ul class="pagination pagination-sm justify-content-end ">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link">{{listProducts.page}} de {{listProducts.totalPages}} paginas</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </nav>

        </tbody>
        
      </table>
      


      <p style="background-color: aqua; color: red">{{listProducts.totalDocs}}, {{listProducts.totalPages}}, {{listProducts.limit}}</p>

    </div>

    <div id="cart-product-list" class="col-2" style="border-left: 2px #198754 solid ; padding:3px 25px 3px 10px; background-color:#19191a">
      {{!-- <h2 class=" my-3" style="color: #198754; text-align: center">CARRITO</h2> --}}
      {{!-- <div id="dinamic-list-cart" style="color: #39f752">
      </div> --}}
      <div class="card" style="margin-top: 50px;">
        <div class="card-header">
          <h3 class="card-title" style="color: #198754; text-align: center">CART</h3>
        </div>
        <div id="dinamic-list-cart" class="card-body ">
           {{#each cartUpdt.cartProducts}}
            <p class="card-text"></p>
          {{/each}}
        </div>
      </div>



    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/indexProductsToCart.js"></script> 



