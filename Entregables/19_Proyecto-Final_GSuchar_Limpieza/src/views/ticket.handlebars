<div class="container login">
    <div class="card col-10 cardsBorder">
      <div class="card-header card-header-dashboard-style ">
        <h2>CheckOut - Finalizar Compra</h2>
      </div>
      <div class="card-body">
        <h5 class="card-title">Ticket / Orden</h5>
        <div class=>
            Nombre:
            {{user.firstName}}
            <br />
            Email:
            {{user.email}}
            <br />
            <div class="card-header-dashboard">
              <div class=" cardsBorder-dashboard col-4">
                <p class="card-header card-header-dashboard-style ">Tu pedido</p>
                {{#each cartProducts.cartProducts}}            
                  <div class="card-body">  
                    {{!-- <p class="card-text">Id: {{idProduct._id}}</p> --}}
                    <p class="card-text"> {{idProduct.title}} x {{quantity}}</p> 
                    {{!-- <p class="card-text">Precio: {{idProduct.price}}</p>
                    <p class="card-text">Codigo: {{idProduct.code}}</p>
                    <p class="card-text">Stock: {{idProduct.stock}}</p> --}}
        
                  </div>
                {{/each}}
              </div>                   
              <div class=" cardsBorder-dashboard col-3">
                {{ticketPreview.totalPriceCart2}}
                <p class="card-header card-header-dashboard-style ">Sin stock</p>
                {{#each ticketPreview.cartWithOutStock}}            
                  <div class="card-body">  
                    {{!-- <p class="card-text">Id: {{idProduct._id}}</p> --}}
                    <p class="card-text" style="color: #ff692d;"> {{idProduct.title}} </p> 
                    {{!-- <p class="card-text">Precio: {{idProduct.price}}</p>
                    <p class="card-text">Codigo: {{idProduct.code}}</p>
                    <p class="card-text">Stock: {{idProduct.stock}}</p> --}}
        
                  </div>
                {{/each}}
                <p class="card-text"> Los productos que no tengamos stock quedaran en tu carrito para cuando vuelvas.</p>
              </div>               
              <div class=" cardsBorder-dashboard col-4">
                {{!-- {{ticketPreview.totalPriceTicket}} --}}
                <p class="card-header card-header-dashboard-style ">CARRITO FINAL</p>
                {{#each ticketPreview.cartWithStock}}            
                  <div class="card-body">  
                    {{!-- <p class="card-text">Id: {{idProduct._id}}</p> --}}
                    <p class="card-text"> {{idProduct.title}} x {{quantity}} = ${{totalPrice}}</p> 
                    {{!-- <p class="card-text">Precio: {{idProduct.price}}</p>
                    <p class="card-text">Codigo: {{idProduct.code}}</p>
                    <p class="card-text">Stock: {{idProduct.stock}}</p> --}}
        
                  </div>
                {{/each}}
                <p class="card-text"><b>TOTAL</b> =>> $ {{ticketPreview.totalPriceTicket}}</p>
              </div>               
            </div>                  
            <a style="text-align: left" href='/productsToCart'>Volver</a>  ---------  
            <a href='/finishticket'>Finalizar<a></a>
            <br />
            {{!-- <a href='/productsToCart'>Volver</a> --}}
        </div>
      </div>
    </div>
    
</div>  
