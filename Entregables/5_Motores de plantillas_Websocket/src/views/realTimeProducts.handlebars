<div id="productList">  
  <div class="row" style="padding: 0px 0px 0px 5px;">    
    <div class="col-9" style="background-color: #212529;">
      <h2 class=" my-3" style="color: #fff; text-align: center">LISTADO DE PRODUCTOS WEBSOCKET</h2>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Codigo</th>
            <th scope="col">Stock</th>
            <th scope="col">Categoria</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>
              <th scope="row">{{this.id}}</th>
              <td>{{this.title}}</td>
              <td>{{this.description}}</td>
              <td>{{this.price}}</td>
              <td>{{this.code}}</td>
              <td>{{this.stock}}</td>
              <td>{{this.category}}</td>
              <td>{{this.thumbnail}}</td>
              <td><input type="submit" value="Borrar"  class="btn btn-danger " onclick="deleteProduct('{{this.id}}')"/>
              </td>  
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-3" style="border-left: 2px #198754 solid ; padding:3px 25px 3px 10px">
      <h2 class="text-center my-1" style="color: #198754;">Añadir Producto</h2>
      <form id="form-products" style="margin: auto">
        <div style="margin-bottom: 10px">
          <div class="col-12">
            <label for="title"> Titulo: </label>
            <br />
            <input type="text" name="title" id="form-title" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="description"> Descripción: </label>
            <br />
            <input type="text" name="description" id="form-description" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="price"> Precio: </label>
            <br />
            <input type="number" name="price" id="form-price" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="code"> Codigo: </label>
            <br />
            <input type="number" name="code" id="form-code" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="stock"> Stock: </label>
            <br />
            <input type="number" name="stock" id="form-stock" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="category"> Categoria: </label>
            <br />
            <input type="text" name="category" id="form-category" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div class="col-12">
            <label for="thumbnail"> URL de la Imagen: </label>
            <br />
            <input type="text" name="thumbnail" id="form-thumbnail" style="margin-bottom: 10px" class="form-control"/>
          </div>
          <div style="display: flex; justify-content: center; align-items: center">
            <input type="submit" value="Crear producto" class="btn btn-success"/>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script> 