<div class="">
  <div class="container productTable">
    <div class="card col-12 overF_Hidden cardsBorder">
      <div id="productList" class="col-12">
        <div class="row" style="margin: auto;" >    
          <div class="col-10 backgroundTable " >
            <h2 class="titleTitle my-3">¡¡ LA TIENDITA !!</h2>
            <table class="">
              <div class="filterText col-11">
                <h3>-- Filtros --</h3>
                <label for="filterLimit">Cantidad Productos:</label>
                <select id="filterLimit" onchange="onFilterChange()">
                  <option value="10">Seleccionar</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                </select>
                <label for="filterAttName">Filtrar por:</label>
                <select id="filterAttName" >
                  <option>Seleccionar</option>
                  <option value="title">Nombre</option>
                  <option value="description">Descripcion</option>            
                  <option value="price">Precio</option>
                  <option value="code">Codigo</option>
                  <option value="stock">Stock</option>
                  <option value="category">Categoria</option>            
                </select>
                <label for="filterText">  y Buscar: </label>
                <input type="text" id="filterText" onchange="onFilterChange()" />
                <label for="filterSort">Ordenar por:</label>
                <select id="filterSort" onchange="onFilterChange()">
                  <option value="">Seleccionar</option>
                  <option value="asc">Menor Precio</option>
                  <option value="desc">Mayor Precio</option>                        
                </select>
                <ul class="pagination pagination-sm justify-content-end ">
                  <li class="page-item"><a class="page-link">{{products.page}} de {{products.totalPages}} paginas</a></li>
                  <li class="page-item"><a class="page-link" href="#" onclick="onFilterChange({{products.nextPage}})"> --></a></li>
                </ul> 
              </div>
              {{!-- <thead>
                <tr>
                  <th scope="col">Codigo</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Descripcion</th>
                  <th scope="col">Precio</th>                  
                  <th scope="col">Stock</th>
                  <th scope="col">Categoria</th>
                  <th scope="col">Thumbnail</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead> --}}
              <tbody  >
                <tr>
                  <td >
                    <div id="dinamic-product-list" class="dinamic-product-list">              
                    {{#each products.docs}}
                      <div class="card cardsBorder-dashboard " style=" margin-top: 10px; width: 18rem; ">
                        <img src="img.png " class="card-img-top card-header-dashboard-style" alt="...">
                        <div class="card-header backgroundTable  ">
                          <h5 class="card-title">{{this.title}}</h5>
                          {{!-- <p class="card-subtitle filterText">{{this.description}}</p> --}}
                        </div>
                        <ul class="list-group list-group-flush card-body-style">
                          <li class="list-group-item card-subtitle" style="border-top: 3px solid darkorange;"> {{this.description}}</li>
                          <li class="list-group-item">Codigo: {{this.code}}</li>
                          <li class="list-group-item">Precio: {{this.price}}</li>
                          <li class="list-group-item">Stock: {{this.stock}}</li>
                          <li class="list-group-item">Categoria: {{this.category}}</li>
                          <li class="list-group-item backgroundTable"style="border-top: 5px solid darkorange;">
                            <a href="#" class="card-link btn btn-sm btn-outline-danger"  onclick="removeFromCart('{{this._id}}')">Quitar</a>
                            <a href="#" class="card-link btn btn-sm btn-outline-success" onclick="addToCart('{{this._id}}')">Agregar</a>
                            {{!-- <a href="#" class="card-link btn btn-sm btn-outline-success" onclick="addToCart('{{this._id}}', sessionUser.idCart)">Agregar</a> --}}
                          </li>
                        </ul>
                      </div>
                    {{/each}}
                  </td>
                </tr>               
              </tbody>
            </table>
            <a href="/dashboard" class="card-link">Volver</a>
          </div>
          <div id="cart-product-list" class="col-2 " style="">
            <div class="card cardsBorder-dashboard" style="margin-top: 50px;">
              <div class="card-header">
                <h3 class="card-title titleColor">CART</h3>
              </div>
              <div id="dinamic-list-cart" class="card-body ">
                {{#each oldCartUnfinished.cartProducts}}
                  <p class="card-text">{{this.idProduct.title}} x {{this.quantity}}</p>
                {{/each}}
              </div>
              <a href="/checkout" class="card-link btn-sm btn btn-outline-warning">CONTINUAR</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/indexProductsToCart.js"></script>
<script>
  // Guardo de forma global sessionUser.idCart con id de cart de la session actual.
  const sessionUser = { idCart: '{{sessionUser.idCart}}' };
</script>