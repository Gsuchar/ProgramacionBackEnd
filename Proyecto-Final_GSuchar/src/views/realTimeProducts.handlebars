<div class="">
  <div class="container productTable">
    <div class="card col-12 overF_Hidden cardsBorder">
      <div id="productList">  
        <div class="row" style="padding: 0px 0px 0px 5px;">    
          <div class="col-9 backgroundTable" >
            <h2 class=" my-3" >Listado de Productos</h2>
            <table class="table table-dark" style="margin: 5px 0px 20px 5px;">
              <thead>
                <tr>
                  <th scope="col">Código</th>
                  <th scope="col">Título</th>
                  <th scope="col">Descripción</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Stock</th>
                  <th scope="col">Categoría</th>
                  <th scope="col">Thumbnail</th>
                  <th scope="col">Opciones</th>
                </tr>
              </thead>
              <tbody id="dinamic-product-list">
                {{#each products}}
                  <tr>
                    <td scope="row">{{this.code}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.thumbnail}}</td>
                    <td><input type="submit" value="Borrar"  class="btn btn-danger " onclick="deleteProduct('{{this._id}}')"/>
                    </td>  
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <div class="col-3" style="border-left: 2px #ffc107 solid;padding:3px 25px 3px 10px;background-color: ghostwhite; ">
            <h2 class="text-center my-1 " >Añadir Producto</h2>
            <form id="formProducts" style="margin: auto">
              <div style="margin-bottom: 10px">
                <div class="col-12">
                  <label for="title"> Titulo: </label>
                  <br />
                  <input type="text" name="title" id="formTitle" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="description"> Descripción: </label>
                  <br />
                  <input type="text" name="description" id="formDescription" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="price"> Precio: </label>
                  <br />
                  <input type="number" name="price" id="formPrice" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="code"> Codigo: </label>
                  <br />
                  <input type="number" name="code" id="formCode" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="stock"> Stock: </label>
                  <br />
                  <input type="number" name="stock" id="formStock" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="category"> Categoria: </label>
                  <br />
                  <input type="text" name="category" id="formCategory" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div class="col-12">
                  <label for="thumbnail"> URL de la Imagen: </label>
                  <br />
                  <input type="text" name="thumbnail" id="formThumbnail" style="margin-bottom: 10px" class="form-control imputForms"/>
                </div>
                <div style="display: flex; justify-content: center; align-items: center">
                  <input type="submit" value="Crear producto" class="btn-sm btn btn-outline-warning"/>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <br>
    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm"> Volver </a>
  </div>  
</div>
<script>
  // Guardo de forma global sessionUser.isPremium para saber si el usuario es premium.
  const sessionUser = { isPremium: '{{sessionUser.isPremium}}',_id : '{{sessionUser._id}}' }
</script>
